GET /insuraquest/_search
{

    "query" : {

        "bool" : {
          
          "filter" : {
                "term" : { "content": "allianz" }
            },

            "must": [

                {

                    "match" : { "external.tag": "leven" }

                },

                {

                    "match" : { "external.language": "Nederlands" }

                }

            ]

        }

    }

}

---

curl -XGET "http://localhost:9200/_search" -H 'Content-Type: application/json' -d'
{
  "query": {
    "bool": {
      "must": {
        "match": {
          "text": "apple"
        }
      },
      "must_not": {
        "match": {
          "text": "pie tart fruit crumble tree"
        }
      }
    }
  }
}'